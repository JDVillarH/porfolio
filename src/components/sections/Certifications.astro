---
import { certificados } from "../../constants/data";
import Linked from "../../icons/Linked.astro";
import School from "../../icons/School.astro";
---

<section class="grid gap-6 scroll-mt-20" id="certificados">
  <h2>
    <School /> Certificados
  </h2>

  <ul
    class="max-w-2xl xl:max-w-3xl mx-5 sm:mx-0 relative border-s border-gray-200 dark:border-slate-600 space-y-4"
  >
    {
      certificados.map(({ title, href, subtitle }) => (
        <li class="ml-4">
          <div class="absolute size-3 rounded-full mt-1.5 -left-1.5 bg-green-500" />
          <a href={href} target="_blank" rel="noopener noreferrer">
            <h3 class="block text-lg md:text-xl text-green-400 font-semibold hover:text-green-500/90 transition">
              <Linked class="inline size-4" /> {title}
            </h3>
          </a>
          <span class="text-sm text-slate-400">{subtitle}</span>
        </li>
      ))
    }
  </ul>
</section>
