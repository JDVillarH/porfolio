---
const { href, color, newTab } = Astro.props;

const colorClasses =
  {
    blue: "outline-blue-600 hover:bg-blue-600/30 focus:ring-blue-700",
    green: "outline-green-600 hover:bg-green-600/30 focus:ring-green-700",
  }[color] || "outline-gray-600 hover:bg-gray-600/30 focus:ring-gray-700";

const classes = `inline-flex text-sm md:text-sm text-slate-200 gap-1 py-2 px-3 md:px-6 rounded-lg transition outline outline-1 hover:text-white focus:ring ${colorClasses}`;

const linkAttributes = newTab
  ? { target: "_blank", rel: "noopener noreferrer" }
  : {};
---

<a class={classes} href={href} {...linkAttributes}>
  <slot />
</a>
