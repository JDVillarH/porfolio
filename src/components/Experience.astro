---
import Linked from "../icons/Linked.astro";
import Badge from "./Badge.astro";

const { title, description, date, link, technologies } = Astro.props;
---

<li class="ml-4">
  <div class="absolute size-3 rounded-full mt-1.5 -left-1.5 bg-blue-500"></div>

  <time class="text-sm text-slate-400">{date}</time>

  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="text-xl text-sky-500 font-semibold transition-all hover:text-sky-600"
  >
    <h3>
      <Linked class="inline size-4" />
      {title}
    </h3>
  </a>

  <p class="prose prose-invert text-slate-300 my-3">
    {description}
  </p>

  <footer class="flex flex-wrap gap-x-2 gap-y-3">
    {technologies.map((title) => <Badge>{title}</Badge>)}
  </footer>
</li>
