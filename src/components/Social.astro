---
import { socialLinks } from "../constants/data";
---

<section class="fixed bottom-10 left-10 text-slate-300">
  <ul
    class="grid gap-6 after:content-[''] after:bg-slate-300 after:h-20 after:w-[1px] after:mx-auto before:content-[''] before:bg-slate-300 before:h-20 before:w-[1px] before:mx-auto"
  >
    {
      socialLinks.map(({ title, href, SocialIcon }) => {
        return (
          <li>
            <a
              class="block hover:text-blue-500 hover:-translate-y-[2px] transition"
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              title={title}
            >
              <SocialIcon class="w-6" />
            </a>
          </li>
        );
      })
    }
  </ul>
</section>
